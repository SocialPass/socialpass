{
  "name": "@nfty/frontend",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "postinstall": "lerna bootstrap",
    "build": "lerna run build",
    "build:shared": "yarn workspace @nfty/shared build",
    "build:moonclave": "yarn build:shared && yarn workspace @nfty/moonclave build",
    "start:moonclave": "yarn build:shared && lerna run --scope '{@nfty/shared,@nfty/moonclave}' watch --parallel",
    "format:check": "prettier --check \"./**/*.{ts,tsx,js,json,jsx,css,scss,md}\"",
    "format:fix": "prettier --write \"./**/*.{ts,tsx,js,json,jsx,css,scss,md}\"",
    "lint:check": "eslint . --ext .js,.jsx,.ts,.tsx --color",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --color --fix"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "lerna": "^4.0.0"
  }
}